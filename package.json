{
  "name": "itcorpo-api",
  "description": "Professional trainings on JavaScript, TypeScript and many more...",
  "private": true,
  "author": {
    "name": "Tomasz Ducin",
    "email": "tomasz@ducin.dev",
    "url": "https://ducin.dev"
  },
  "scripts": {
    "start": "concurrently \"ts-node server\" \"npm run open\"",
    "dev": "concurrently \"npm run server:dev\" \"npm run dev:prism-proxy\" \"npm run dev:contract:generate-types\" \"npm run open\"",
    "open": "ts-node scripts/open-index",
    "server:dev": "nodemon --ext ts,json --watch resources --watch middlewares --watch lib --watch server.ts server",
    "migrate:database": "ts-node migrate/migrate.ts",
    "contract:generate-types": "ts-node scripts/generate-api-types.ts",
    "dev:contract:generate-types": "nodemon --watch contract/openapi.yml --ext yml,yaml -x 'npm run contract:generate-types'",
    "dev:prism-proxy": "prism proxy ./contract/openapi.yml http://localhost:3000 --errors -p 3001",
    "test": "vitest",
    "test:run": "vitest run",
    "test:ui": "vitest --ui",
    "test:coverage": "vitest run --coverage"
  },
  "dependencies": {
    "body-parser": "^1.20.3",
    "chalk": "^4.1.2",
    "compression": "^1.7.5",
    "connect-pause": "^0.1.0",
    "cookie-parser": "^1.4.7",
    "cors": "^2.8.5",
    "date-fns": "^4.1.0",
    "express": "^4.21.2",
    "express-jwt": "^8.5.1",
    "express-openapi-validator": "^5.4.2",
    "express-urlrewrite": "^2.0.3",
    "http-server": "^14.1.0",
    "json-schema-faker": "^0.4.7",
    "json-schema-to-typescript": "^10.1.5",
    "json-server": "^0.17.0",
    "jsonwebtoken": "^8.5.1",
    "morgan": "^1.10.0",
    "open": "^8.4.2",
    "socket.io": "^4.4.1",
    "swagger-typescript-api": "^13.0.23",
    "swagger-ui-express": "^4.6.3",
    "uuid": "^11.0.3",
    "ws": "^8.18.0",
    "yaml": "^2.7.0",
    "yargs": "^17.7.2",
    "zod": "^3.24.1"
  },
  "devDependencies": {
    "@stoplight/prism-cli": "^5.12.0",
    "@types/body-parser": "^1.19.2",
    "@types/compression": "^1.7.5",
    "@types/cookie-parser": "^1.4.8",
    "@types/cors": "^2.8.17",
    "@types/express": "^4.17.21",
    "@types/json-server": "^0.14.4",
    "@types/jsonwebtoken": "^9.0.7",
    "@types/morgan": "^1.9.9",
    "@types/node": "^18.16.19",
    "@types/supertest": "^6.0.2",
    "@types/swagger-ui-express": "^4.1.7",
    "@types/uuid": "^10.0.0",
    "@types/ws": "^8.5.13",
    "@types/yargs": "^17.0.33",
    "@vitest/coverage-v8": "^2.1.8",
    "@vitest/ui": "^2.1.8",
    "concurrently": "^9.1.2",
    "nodemon": "^3.1.9",
    "supertest": "^7.0.0",
    "ts-node": "^10.9.1",
    "typescript": "^5.7.2",
    "vitest": "^2.1.8"
  },
  "engines": {
    "node": ">=18.0.0"
  }
}
